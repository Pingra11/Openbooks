rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow unauthenticated reads to usernames and emails for login process
    // Allow authenticated users to write their own mappings
    match /usernames/{username} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /emails/{email} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow reading existing users and requests for duplication checking
    match /users/{userId} {
      allow read: if true; // Needed for checking existing users
      allow write: if request.auth != null;
    }
    
    match /userRequests/{requestId} {
      allow read: if true; // Needed for checking existing requests
      allow write: if true; // Allow unauthenticated writes for new user requests
    }
    
    // All other collections require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}